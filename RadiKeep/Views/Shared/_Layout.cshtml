@using System.Reflection;
@inject RadiKeep.Logics.Services.IAppConfigurationService AppConfigurationService
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RadiKeep</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link href="https://use.fontawesome.com/releases/v6.2.0/css/all.css" rel="stylesheet">
    @await RenderSectionAsync("css", required: false)
</head>
<body data-resume-playback-across-pages="@AppConfigurationService.ResumePlaybackAcrossPages.ToString().ToLowerInvariant()">
    @{
        var appAssembly = typeof(RadiKeep.Controllers.HomeController).Assembly;
        var informationalVersion = appAssembly
            .GetCustomAttribute<AssemblyInformationalVersionAttribute>()
            ?.InformationalVersion;
        var normalizedVersion = string.IsNullOrWhiteSpace(informationalVersion)
            ? (appAssembly.GetName().Version?.ToString() ?? "unknown")
            : informationalVersion.Split('+')[0];
    }
    <header class="rk-header">
        <div class="container rk-header-inner">
            <a class="rk-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="rk-brand-icon" style="width:2.5rem; height:2.5rem;">
                    <img src="~/img/logo-mark.svg"
                         asp-append-version="true"
                         alt="RadiKeep"
                         style="height:1.85rem; width:auto; object-fit:contain;" />
                </span>
                <span class="rk-brand-text">RadiKeep</span>
            </a>

            <nav class="rk-nav navbar-menu">
                <div class="has-dropdown rk-dropdown-group">
                    <a class="rk-nav-link navbar-link" href="#">番組表</a>
                    <div class="navbar-dropdown rk-dropdown-menu">
                        <a class="navbar-item" asp-area="" asp-controller="Program" asp-action="Radiko">radiko番組表</a>
                        <a class="navbar-item" asp-area="" asp-controller="Program" asp-action="Nhk">らじる★らじる番組表</a>
                    </div>
                </div>
                <a class="rk-nav-link" asp-area="" asp-controller="Program" asp-action="Search">キーワード検索</a>
                <div class="has-dropdown rk-dropdown-group">
                    <a class="rk-nav-link navbar-link" href="#">録音予約</a>
                    <div class="navbar-dropdown rk-dropdown-menu">
                        <a class="navbar-item" asp-area="" asp-controller="Reserve" asp-action="ProgramReserveList">録音予定の番組</a>
                        <a class="navbar-item" asp-area="" asp-controller="Reserve" asp-action="KeywordReserveList">自動予約ルール</a>
                    </div>
                </div>
                <a class="rk-nav-link" asp-area="" asp-controller="Recorded" asp-action="Index">録音済番組</a>
            </nav>

            <div class="rk-header-actions">
                <a class="rk-icon-button"
                   asp-area=""
                   asp-controller="Setting"
                   asp-action="Index"
                   aria-label="設定">
                    <span class="icon">
                        <i class="fas fa-gear"></i>
                    </span>
                </a>
                <div class="dropdown is-right">
                    <div class="dropdown-trigger">
                        <button class="rk-icon-button" aria-haspopup="true" aria-controls="dropdown-menu" id="notification-button">
                            <span class="icon">
                                <i class="fas fa-bell"></i>
                            </span>
                        </button>
                    </div>
                    <div class="dropdown-menu notification-popup has-text-left" id="notification-popup" role="menu">
                        <div class="notification-dropdown-content" id="notification-content">
                        </div>
                        <div class="has-text-right mr-2 mb-2">
                            <a class="button is-light" asp-controller="Home" asp-action="Notification">全て見る</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container rk-main">
        <main role="main" class="section rk-main-section">
            @RenderBody()
        </main>
        <div class="rk-app-version" aria-label="アプリケーションバージョン">
            RadiKeep - v@(normalizedVersion)
        </div>
    </div>

    <nav class="bottom-nav" aria-label="primary">
        <a class="bottom-nav-item" asp-area="" asp-controller="Home" asp-action="Index">
            <span class="icon"><i class="fas fa-house"></i></span>
            <span class="bottom-nav-label">ホーム</span>
        </a>
        <button class="bottom-nav-item" type="button" data-bottom-sheet="program">
            <span class="icon"><i class="fas fa-radio"></i></span>
            <span class="bottom-nav-label">番組表</span>
        </button>
        <a class="bottom-nav-item" asp-area="" asp-controller="Program" asp-action="Search">
            <span class="icon"><i class="fas fa-magnifying-glass"></i></span>
            <span class="bottom-nav-label">検索</span>
        </a>
        <button class="bottom-nav-item" type="button" data-bottom-sheet="reserve">
            <span class="icon"><i class="fas fa-calendar-check"></i></span>
            <span class="bottom-nav-label">予約</span>
        </button>
        <a class="bottom-nav-item" asp-area="" asp-controller="Recorded" asp-action="Index">
            <span class="icon"><i class="fas fa-folder-open"></i></span>
            <span class="bottom-nav-label">録音</span>
        </a>
    </nav>

    <div class="bottom-sheet" id="bottom-sheet">
        <div class="bottom-sheet-backdrop" data-bottom-sheet-close="true"></div>
        <div class="bottom-sheet-panel">
            <div class="bottom-sheet-handle"></div>
            <div class="bottom-sheet-content" id="bottom-sheet-content"></div>
        </div>
    </div>

    <footer class="footer rk-playerbar">
        <div class="footer-content content">
            <div id="audio-player">

            </div>
        </div>
    </footer>
    <script src="~/lib/signalr/signalr.min.js" asp-append-version="true"></script>
    <script src="~/lib/hls.js/hls.min.js" asp-append-version="true"></script>
    <script type="module" src="~/js/layout.js" asp-append-version="true"></script>
    <script type="module" src="~/js/layout-player.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
