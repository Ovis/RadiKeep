@{
    ViewData["Title"] = "お知らせ一覧";
}

<section class="section">
    <div class="rk-page-head">
        <h1 class="rk-page-title">お知らせ一覧</h1>
        <p class="rk-page-subtitle">録音結果・警告・エラーの通知履歴を確認できます。</p>
    </div>
    <div class="rk-panel">
        <div class="rk-table-wrap hidden md:block">
            <table class="table is-fullwidth">
                <thead>
                <tr>
                    <th style="width: 16%;">
                        お知らせ日時
                    </th>
                    <th>
                        お知らせ内容
                    </th>
                </tr>
                </thead>
                <tbody id="recordings-table-body">
                </tbody>
            </table>
        </div>
        <div id="notifications-mobile-list" class="md:hidden space-y-2"></div>
        <nav class="pagination" role="navigation" aria-label="pagination">
            <ul class="pagination-list" id="pagination-list">
            </ul>
        </nav>
        <div class="has-text-right mt-4 md:mt-5">
            <button class="button is-warning" id="clear-notification-button">お知らせを全件削除</button>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/lib/hls.js/hls.min.js" asp-append-version="true"></script>
    <script type="module" src="~/js/notification.js" asp-append-version="true"></script>
}
