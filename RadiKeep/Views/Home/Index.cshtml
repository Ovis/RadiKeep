@{
    ViewData["Title"] = "RadiKeep";
}

<div class="mb-6">
    <h1 class="title is-1 mb-2">現在放送中の番組</h1>
    <p class="content text-zinc-600">放送中の番組を選んで、すぐに再生・録音できます。</p>
</div>

<div class="box p-4 mb-5">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div id="area-tabs-wrapper" class="flex flex-wrap items-center gap-2 pb-1">
            <div id="area-tabs" class="flex flex-wrap items-center gap-2"></div>
        </div>
        <div class="control w-full md:w-auto">
            <input class="input search-input" type="text" id="now-search" placeholder="番組名または放送局で検索">
        </div>
    </div>
</div>

<div id="programs-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
</div>
<div id="programs-empty" class="box p-6 text-center text-zinc-500 hidden">
    表示できる番組がありません。
</div>

<template id="program-card-template">
    <div class="program-detail">
        <div class="card">
            <div class="card-content">
                <p class="title text-lg"></p>
                <p class="subtitle text-sm text-zinc-600"></p>
                <p class="performer text-xs text-zinc-500"></p>
                <div class="content mt-3 rk-program-meta">
                    <p class="startTime text-xs text-zinc-500"></p>
                    <p class="endTime text-xs text-zinc-500"></p>
                    <p class="description mt-2"></p>
                    <button type="button" class="description-toggle hidden">more</button>
                </div>
            </div>
            <footer class="card-footer play-program cursor-pointer">
                <button type="button" class="card-footer-item play-btn">再生</button>
                <button type="button" class="card-footer-item record-btn">リアルタイム録音</button>
                <button type="button" class="card-footer-item timefree-btn">タイムフリー録音</button>
            </footer>
        </div>
    </div>
</template>



<div class="rk-toast" id="home-result-toast" role="status" aria-live="polite" aria-atomic="true">
    <div class="rk-toast-body">
        <span id="home-result-toast-message">録音予約を開始しました。</span>
        <button class="delete" aria-label="close" id="home-result-toast-close"></button>
    </div>
</div>

@section Scripts
{
    <script type="module" src="~/js/home.js" asp-append-version="true"></script>
}
